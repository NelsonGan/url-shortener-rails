<div class="py-16 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="bg-green-600 pt-12 sm:pt-16 rounded-3xl">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-extrabold text-white sm:text-4xl">Link Dashboard</h2>
        <p class="mt-3 text-xl text-white sm:mt-4">View the statistics of all created links with the table below</p>
      </div>
    </div>

    <div class="rounded-3xl mt-10 pb-12 bg-green-600 sm:pb-16">
      <div class="relative">
        <div class="absolute inset-0 h-1/2 bg-green-600"></div>
        <div class="bg-green-600 relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-4xl mx-auto">
            <dl class="rounded-lg bg-white shadow-lg sm:grid sm:grid-cols-2">
              <div class="flex flex-col border-b border-gray-100 p-6 text-center sm:border-0 sm:border-r">
                <dt class="order-2 mt-2 text-lg leading-6 font-medium text-gray-500">Number of Links</dt>
                <dd class="order-1 text-5xl font-extrabold text-green-600"><%= @links.count %></dd>
              </div>
              <div class="flex flex-col border-t border-b border-gray-100 p-6 text-center sm:border-0 sm:border-l sm:border-r">
                <dt class="order-2 mt-2 text-lg leading-6 font-medium text-gray-500">Number of Visits</dt>
                <dd class="order-1 text-5xl font-extrabold text-green-600"><%= @visit_histories_count %></dd>
              </div>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-10 flex flex-col">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Shortened Link</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Target Link</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Clicks</th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">View</span>
              </th>
            </tr>
            </thead>
            <tbody>

            <% @links.each do |v| %>
              <tr class="bg-white">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-blue-400 underline"><a target="_blank" href="<%= v.generate_short_link %>"><%= v.generate_short_link %></a></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-blue-400 underline"><a target="_blank" href="<%= v.target_url %>"><%= v.target_url %></a></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= v.clicks %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to "View", link_path(v), class: "text-indigo-600 hover:text-indigo-900"%>
                  </td>
            <% end.empty? and begin %>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">No record yet</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

