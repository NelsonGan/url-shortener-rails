<div class="bg-white ">
  <div class="block">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex justify-center" aria-label="Tabs">
        <% if current_page?(root_path) %>
          <%= link_to "Home", root_path, class: "border-green-500 text-green-600 w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm" %>
          <%= link_to "Dashboard", links_path, class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm" %>
        <% elsif current_page?(links_path) %>
          <%= link_to "Home", root_path, class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm" %>
          <%= link_to "Dashboard", links_path, class: "border-green-500 text-green-600 w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm" %>
        <% else %>
          <%= link_to "Home", root_path, class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm" %>
          <%= link_to "Dashboard", links_path, class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm" %>
        <% end %>
      </nav>
    </div>
  </div>
</div>